generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("MASTER_DATABASE_URL")
}

model Workspace {
  id            String   @id @default(cuid()) @map("id")
  name          String   @unique @map("projectname")
  databaseUrl   String   @map("url")
  neonProjectId String?  @map("neon_project_id")
  createdAt     DateTime @default(now()) @map("date_creation")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("projects")
}